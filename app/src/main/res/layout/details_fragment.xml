<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detailsImgName" tools:text="Name of the image"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/feed_item_elem_margin_left_right"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="@dimen/feed_item_margin_left_right"
            app:layout_constraintHorizontal_bias="0.0" android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent" android:textStyle="bold"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detailsTags" android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/detailsImgName" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0" tools:text="tags" android:textSize="16sp"
            android:textStyle="italic"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detailsDate" tools:text="19.05.2019"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/detailsImgName"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="1.0" android:textSize="24sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>